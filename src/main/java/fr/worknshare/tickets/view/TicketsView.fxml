<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXTreeTableView?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fr.worknshare.tickets.controller.TicketsController">
	<children>
       <Label styleClass="h1" stylesheets="@application.css" text="Tickets" />
       <JFXTreeTableView fx:id="table" minHeight="500.0" minWidth="800.0" prefHeight="500.0" prefWidth="800.0" showRoot="false" stylesheets="@application.css" VBox.vgrow="ALWAYS" />
       <HBox alignment="TOP_RIGHT" prefHeight="40.0" prefWidth="200.0">
          <children>
             <JFXButton prefHeight="40.0" styleClass="previous-button" stylesheets="@application.css" onAction="#previousClicked" text="&lt;" textAlignment="CENTER" fx:id="previousButton">
                <opaqueInsets>
                   <Insets bottom="1.0" left="1.0" right="1.0" top="1.0" />
                </opaqueInsets>
             </JFXButton>
             <Label prefHeight="40.0" text="Page 1/5" textAlignment="CENTER" fx:id="paginationLabel"/>
             <JFXButton layoutX="455.0" layoutY="10.0" prefHeight="40.0" styleClass="next-button" onAction="#nextClicked" stylesheets="@application.css" text="&gt;" textAlignment="CENTER" fx:id="nextButton">
                <opaqueInsets>
                   <Insets bottom="1.0" left="1.0" right="1.0" top="1.0" />
                </opaqueInsets>
             </JFXButton>
          </children>
       </HBox>
    </children>
</VBox>
